# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
# root = true

[*]
trim_trailing_whitespace = true
indent_size = 4

[*.json]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = false

[*.{html,hbs,handlebars,erb}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{md,mdx}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.js]
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{css,scss,sass,less}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
